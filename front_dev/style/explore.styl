	margin 0px
	padding 0px
		
.wrapper-filter-a
	position fixed
	top 50px
	z-index 4
	background: rgb(62,146,157);
	background: -moz-linear-gradient(left,  rgba(62,146,157,1) 0%, rgba(56,131,173,1) 76%);
	background: -webkit-linear-gradient(left,  rgba(62,146,157,1) 0%,rgba(56,131,173,1) 76%);
	background: linear-gradient(to right,  rgba(62,146,157,1) 0%,rgba(56,131,173,1) 76%);

.wrapper-filter-b
	position fixed
	top 85px
	z-index 4
	background-color #F2F2F2
	
.btn-filter
	background-color #D8D8D8
	border-radius 10px
	width 80px
	height 20px
	margin 0px 3px
	padding 0px
	overflow hidden
	a
		cursor pointer
		position relative
		top -3px
		display block
		width 100%
		height 100%
		text-decoration none
		p
			display block
			width 100%
			font-size 0.6em
			font-weight lighter
			color #585858
			font-family "Oxygen"
			text-align center
			margin 6px auto 0px auto
			
			

@media screen and (min-width: 767px)
		
	body .container .app-stage .section-explore .substage-explore .wrapper-thumbnails
		display flex
		flex-direction row
		flex-wrap wrap
		width 712px
		margin 10px auto 0px auto
		justify-content flex-start
		.thumbnail
			width 346px
			margin 0px 5px 10px 5px

@media screen and (min-width: 1000px)
	.section-explore
		margin 60px 10px 10px 10px 
	.wrapper-thumbnails
		border solid 1px yellow
		width auto
		margin 0px auto
		
	body .container .app-stage .section-explore .substage-explore .wrapper-thumbnails
		justify-content flex-start
		align-content flex-start
		margin 10px auto 0px auto
			

	.section-explore .wrapper-filter-a 
		position relative
		top 0px
		ul
			max-width 300px
			margin 0px auto
		
	.section-explore .wrapper-filter-b
		position relative
		top 0px
		ul
			max-width 430px
			margin 0px auto
		
	.element-hidden
		display none
		
	body .container .app-stage .section-explore .substage-explore .wrapper-categories-btn
		display block
		width 150px
		padding 0px
		margin 10px 10px 0px 0px
		background none
		background-color #F2F2F2
		position relative
		top 0px
		
		h4
			display none
			
		ul
			list-style none
			margin 0
			padding 0
			display block
			width auto
			
			
			li
				border solid 1px green
				max-width 100px
				margin 25px auto
				cursor pointer
				width 100%
				
				
				a
					width 100%
					height 100%
					display flex
					align-items center
					justify-content flex-start
					text-decoration none
					
					
					img, p
						border solid 1px black
						margin 0px
						
					p
						color #585858
						font-size 0.8em
						font-family "Montserrat"
						font-weight normal
						margin 0px 0px 0px 6px
					
					img
						height 100%
						
	
	body .container .app-stage .section-explore .substage-explore
		display flex
		align-content flex-start
		
@media screen and (min-width: 1278px)
	
	body .container .app-stage .section-explore .substage-explore .wrapper-thumbnails
		width 1110px
