.section-explore
	display block
	background-color white
	margin 50px 0px 0px 0px
	padding 0px
	
	.wrapper-filter-a, .wrapper-filter-b
		margin 0px
		padding 0px
		height 35px
		display block
		width 100%
		
		ul
			height 100%
			margin 0px
			align-items center
			padding 0px
			display flex
			align-content center
			justify-content space-around
			list-style none
			
			li
				a
					text-decoration none
					p, span
						display inline-block
	.substage-explore
		.wrapper-categories-btn
			display block
			background: rgb(0,174,181);
			background: -moz-linear-gradient(-45deg,  rgba(0,174,181,1) 0%, rgba(0,151,211,1) 31%);
			background: -webkit-linear-gradient(-45deg,  rgba(0,174,181,1) 0%,rgba(0,151,211,1) 31%);
			background: linear-gradient(135deg,  rgba(0,174,181,1) 0%,rgba(0,151,211,1) 31%);
			margin 0px
			padding 0px
			position relative
			top 85px
			height 1100px
			position fixed
			z-index 5
			width 100%
			h4
				display block
				margin 0px auto 0px auto
				width 198px
				padding 35px 0px 0px 0px
				font-family "Oxygen"
				font-size 0.9em
				font-weight bold
				color white
				
			ul
				display flex
				flex-wrap wrap
				border solid 1px white
				width 70%
				margin 40px auto 0px auto
				padding 0px
				list-style none
				
				li
					border solid 1px #ccc
					width 32.3%
					margin 3% 0px
					a
						text-decoration none
						
						img
							display block
							width 20px
							margin 0px auto
							
						p
							text-align center
						
				

		.wrapper-thumbnails
			display flex
			flex-direction column
			justify-content center
			align-content center
			margin 123px auto 0px auto
			width auto
			.thumbnail
				display block
				width 99%
				height 230px
				margin 5px 0px
				border-radius 10px
				overflow hidden
				.thumb-image
					position relative
					z-index 1
					display block
					width 100%
					height 100%
					margin 0px
					padding 0px
					overflow hidden
					-webkit-filter: blur(18px);
					-moz-filter: blur(18px);
					-o-filter: blur(18px);
					-ms-filter: blur(18px);
					filter blur(18px)
					
					img
						margin 0px
						padding 0px
						display block
						width 100%
						
					
				.mask
					position relative
					z-index 2
					display block
					margin 0px
					padding 0px
					top -230px
					
					.transparent-mask-content
						display block
						position relative
						z-index 3	
						height 230px
						width 100%
						margin 0
						overflow hidden
						
						
						.price
							position relative
							top 13px
							left 0px
							margin 0px
							padding 0px
							height 30px
							width 57px
							text-align center
							line-height 30px
							background-color #00aeb5
							opacity 0.7
							
						.background-ico-play
							background-color white
							opacity 0.3
							width 50px
							height 50px
							border-radius 50%
							margin 40px auto 0px auto
							padding 0px
							
					
						.ico-play
							margin -50px auto 0px auto
							display block
							width 50px
							height 50px
							line-height 50px
							text-align center
							font-size 2.5em
							border-radius 50%
							color white
													
						h3, h4
							display block
							position relative
							top 50px
							margin 0px 4% 0px 0px
							padding 0px
							text-align right
							
						h3
							text-transform uppercase
							
						h4
							text-transform capitalize

						

					.blur-mask-content
						display none
						position relative
						z-index 2
						height 100%
						margin 0px
						padding 0px
						width auto
							
						
						.wrapper-blur-mask-btn
							display flex
							justify-content space-between
							margin 13px 0px 13px 0px
							padding 0px 30px
							
						h1, .thumb-text
							margin 0px
							padding 0px 25px
							
						.thumb-description
							margin 6px 0px 

						
						.wrapper-social-interaction-data
							list-style none
							margin 0px 0px 0px 0px
							padding 0px
							padding 0px 30px
							li
								display inline-block
								
								a, p
									display inline-block
								a
									text-decoration none
									.icos
										position relative
										top 2px
										
									.ico-heart-active
										display none
										
									 
							.floating-wrapper-data
								float right
								
							.comments-info
								margin-left 5px

